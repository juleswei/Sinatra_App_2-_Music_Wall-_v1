
  <div id = "top_container_song" class="jumbotron">
    <h1>ALL SONGS</h1>
    <p><a href="/songs/new">Post a song</a></p>
  </div>
<div class = "songs_table">
  <table class="table table-hover">
    <thead>
      <tr class ="info">
        <th>Song Title</th>
        <th>Artist</th>
        <th>URL</th>
        <th>Created At</th>
        <th>Updated At</th>
        <th>Vote Here</th>
        <th>Delete</th>
      </tr>
    </thead> 
    <tbody>
     <% @songs.each do |song| %> 
        <tr>
          <td><%= song.title %></td>
          <td><%= song.artist %></td>
          <td><a href = "<%=song.url%>"><%=song.url%></td>
          <td><%= song.created_at %></td>
          <td><%= song.updated_at %></td>
          <td><a href= "/votes/ <%= song.id%>"> <%= song.votes.count%> </a> </td>
          <td>
            <form action="/songs/<%=song.id%>" method="post">
              <input type="hidden" name="_method" value="delete">
              <button>Delete</button>
            </form>
          </td>

        </tr>  
    </tbody>
      <% end %>
  </table>
</div>

<table id= "new_container" class="container">
  <tbody> 
    <tr>
      <td><div class="col-sm-8">
         <iframe width="600" height="338" src=<%= get_embedded_url(@songs.first.url)%>  frameborder="0" allowfullscreen></iframe>
      </div></td>

      <td><div class="col-sm-8">
         <iframe width="600" height="338" src=<%= (@songs.first.url)%> frameborder="0" allowfullscreen></iframe>
      </div></td>
    </tr> 
  </tbody>
</table>


<div id = "song_page_jumbo" class="jumbotron" >
  <p>NEW SONG</p>
  <p>Input your Song below</p>
  <div class="col-lg-4">
  </div>
  
  <div class="col-lg-4">
    <form method= "post" action="/songs">
      <div id="new_song "class = "song">
        <label>Song Name</label>
        <input type = "text" class="form-control" name = "title" placeholder= "Title">
   
        <label>Artist</label>
        <input type = "text" class="form-control" name = "artist"placeholder= "Artist">
   
        <label>URL</label>
        <input type="text" class="form-control" name = "url" placeholder= "URL">
      </div>
      <div>
        <input type="submit" class="btn btn-lg btn-primary btn-block" name="Submit Song">
      </div>
    </form>  
  </div>


  <div class="col-lg-4">
  </div>  
</div>




