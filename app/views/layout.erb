<!DOCTYPE html>
<html lang="en">
  <head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
     <link rel="stylesheet" href="/stylesheets/bootstrap.css" >
    <link rel="stylesheet" type="text/css" href="/stylesheets/custom.css">
  
    <title>songzi</title>

  </head>
  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#"><span class="text-thin">Songzi</span></a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li><a href="/"><span class="text-thin">Home</span></a></li>
            <li ><a href="/songs"><span class="text-thin">All Songs</span></a></li>
            <li ><a href="/songs/new"><span class="text-thin">Add Song</span></a></li>
          </ul>

          <div class="nav navbar-nav navbar-right edited">
            <li >
                <% unless current_user%>
                  <a href="/users/new"><span class="text-thin">Sign Up</span></a>
                <% end %>
            </li>
            <li>
              <% if current_user%>
                <p><a href="/logout"><span class="text-thin">Logout</span></a></p>
              <% end %>
            </li>
            
            <li>
                <%= current_user.name if current_user%>
                <% unless current_user %>
                  <a href="/users/new"><span class="text-thin">Login</span></a>
                <% end %>
            </li>
          </div>

        </div>
      </div>
    </nav>

    <section class="main-wrapper">
      <%= @message %>
      <%= yield %>
    </section>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script src="/javascript/application.js"></script>
  </body>

</html>
